{
  "name": "creatorsync",
  "version": "2.0.0",
  "description": "CreatorSync - Enterprise-grade music monetization platform for producers and artists. Features beat marketplace, real-time collaboration, AI-powered tools, and integrated streaming API services.",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "lint": "eslint server/ public/js/",
    "lint:fix": "eslint server/ public/js/ --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "docker:build": "docker build -t creatorsync .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:init": "node scripts/initDatabase.js",
    "health": "node scripts/healthCheck.js"
  },
  "keywords": [
    "music",
    "beats",
    "producer",
    "artist",
    "monetization",
    "collaboration",
