# CreatorSync Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Client URL (for CORS)
CLIENT_URL=http://localhost:5501

# Database Configuration (implement when adding database)
# DATABASE_URL=mongodb://localhost:27017/creatorsync
# DATABASE_NAME=creatorsync

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# JWT Configuration (implement when adding JWT auth)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@creatorsync.com
EMAIL_FROM_NAME=CreatorSync
# Alternative: SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# File Storage Configuration
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/flac,audio/aac
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif

# Redis Configuration (for session storage and caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password_here

# AWS S3 Configuration (for cloud file storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=creatorsync-files

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:5501

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Analytics Configuration
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your_mixpanel_token

# Social Media Integration
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# INSTAGRAM_CLIENT_ID=your_instagram_client_id
# INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Error Tracking
# SENTRY_DSN=your_sentry_dsn_here

# Development Tools
DEBUG=creatorsync:*
LOG_LEVEL=debug

# Production Overrides (set these in production environment)
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG=false
