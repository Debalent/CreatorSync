# CreatorSync Enterprise Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
PORT=3000
CLIENT_URL=http://localhost:5501

# ========================================
# Database Configuration
# ========================================
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/creatorsync
# Or for MongoDB Atlas (Enterprise):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/creatorsync?retryWrites=true&w=majority

# Database Pool Settings
DB_POOL_SIZE=10
DB_POOL_MIN=2
DB_MAX_IDLE_TIME_MS=30000

# ========================================
# Redis Cache Configuration
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
REDIS_KEY_PREFIX=creatorsync:

# ========================================
# Authentication & Security
# ========================================
# JWT Secret (REQUIRED - use a 256-bit random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-256-bit-random-string
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt Salt Rounds (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ========================================
# Payment Processing
# ========================================
# Stripe API Keys (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal API Keys (https://developer.paypal.com/developer/applications)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox
# PAYPAL_MODE=live (for production)

# Apple Pay Configuration (via Stripe)
# Apple Pay is automatically enabled through Stripe when configured
# Follow Stripe's Apple Pay setup guide: https://stripe.com/docs/apple-pay

# Google Pay Configuration (via Stripe)
# Google Pay is automatically enabled through Stripe when configured
# Follow Stripe's Google Pay setup guide: https://stripe.com/docs/google-pay

# Mobile Payment Options
# Cash App, Chime, One Card are handled through Stripe Payment Methods
# No additional API keys required - configured in Stripe Dashboard

# Platform Fees & Subscription Settings
PLATFORM_FEE_PERCENTAGE=12.5
MIN_PAYOUT_AMOUNT=50
TRIAL_PERIOD_DAYS=15
FIRST_MONTH_DISCOUNT=0.5
# 50% off first month after trial

# ========================================
# Email Service
# ========================================
# SendGrid (Recommended for Enterprise)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
EMAIL_FROM=noreply@creatorsync.com
EMAIL_FROM_NAME=CreatorSync

# Alternative: SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ========================================
# Streaming Platform APIs
# ========================================
# Twitch API (https://dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here
TWITCH_CHANNEL_NAME=your_channel_name

# YouTube API (https://console.cloud.google.com)
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CHANNEL_ID=your_channel_id_here

# ========================================
# File Upload & Storage
# ========================================
# Local Storage
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=104857600
MAX_FILE_SIZE_MB=100
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/flac,audio/aac,audio/ogg
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# AWS S3 (Enterprise Cloud Storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=creatorsync-uploads
AWS_S3_CDN_URL=

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_MAX=10
RATE_LIMIT_PAYMENT_MAX=20

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_DIR=./logs
LOG_FORMAT=json

# ========================================
# Real-Time Features
# ========================================
# Socket.IO Configuration
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000
SOCKET_IO_MAX_HTTP_BUFFER_SIZE=1e6
MAX_COLLABORATION_USERS=10

# ========================================
# AI & Machine Learning
# ========================================
# OpenAI API (AI Songwriter Feature)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
AI_SONGWRITER_MAX_TOKENS=1000
AI_SONGWRITER_TEMPERATURE=0.7

# ========================================
# Monitoring & Analytics
# ========================================
# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application Performance Monitoring
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=CreatorSync
DATADOG_API_KEY=

# Google Analytics
GA_TRACKING_ID=

# ========================================
# Feature Flags
# ========================================
ENABLE_AI_SONGWRITER=true
ENABLE_COLLABORATION=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_WEBHOOKS=true

# ========================================
# Subscription Tiers & Limits
# ========================================
TIER_FREE_MAX_UPLOADS=5
TIER_STARTER_MAX_UPLOADS=50
TIER_PRO_MAX_UPLOADS=500
TIER_ENTERPRISE_MAX_UPLOADS=-1

TIER_FREE_MAX_STORAGE_GB=1
TIER_STARTER_MAX_STORAGE_GB=50
TIER_PRO_MAX_STORAGE_GB=500
TIER_ENTERPRISE_MAX_STORAGE_GB=-1

# ========================================
# CDN & Performance
# ========================================
CDN_URL=
ASSETS_BASE_URL=
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# ========================================
# Development & Testing
# ========================================
# Debug mode (verbose logging)
DEBUG=false

# Test mode (disables actual transactions)
TEST_MODE=false

# Mock external services in development
MOCK_STRIPE=false
MOCK_EMAIL=false
MOCK_AI_SERVICES=false
MOCK_REDIS=false

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:5501

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Analytics Configuration
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your_mixpanel_token

# Social Media Integration
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# INSTAGRAM_CLIENT_ID=your_instagram_client_id
# INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Error Tracking
# SENTRY_DSN=your_sentry_dsn_here

# Development Tools
DEBUG=creatorsync:*
LOG_LEVEL=debug

# Production Overrides (set these in production environment)
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG=false
